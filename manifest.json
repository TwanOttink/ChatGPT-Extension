{
    "manifest_version": 2,
    "version": "1.0",
    "name": "ChatGPT",
    "description": "Opens ChatGPT in a new tab.",
    "icons": {
        "48": "icon48.png",
        "96": "icon96.png"
    },
    "permissions": [
        "tabs"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "test@example.com"
        }
    },
    "browser_action": {
        "default_icon": {
            "48": "icon48.png",
            "96": "icon96.png"
        }
    }
}